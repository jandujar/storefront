<div id="goods-store" data-role="page">
    <img src="{{background}}" class="background">
    <div class="header">
        <div class="padding left">
            {{#each virtualCurrencies}}
            <span class="balance">
                {{#if this.imgFilePath}}
                <img src="{{this.imgFilePath}}">
                {{/if}}
                <label>{{this.balance}}</label>
            </span>
            {{/each}}
        </div>
        <div class="content">
            <h1 class="title">
                {{templateTitle}}
            </h1>
        </div>
        <div class="padding right">
            <div class="leave-store" title="Close"></div>
        </div>
    </div>

    <div class="items-container">
        <div class="items"></div>
    </div>
    <div class="footer">
        <button class="buy-more btn btn-basic-primary">
            <h1><img src="{{moreCurrencyImage}}" class="currency">{{moreCurrencyText}}</h1>
        </button>
    </div>
</div>
<div id="currency-store" data-role="page">
    <img src="{{background}}" class="background">
    <div class="header">
        <div class="padding left">
            {{#each virtualCurrencies}}
            <span class="balance">
                {{#if this.imgFilePath}}
                <img src="{{this.imgFilePath}}">
                {{/if}}
                {{this.balance}}
            </span>
            {{/each}}
        </div>
        <div class="content">
            <h1 class="title">
                {{templateTitle}}
            </h1>
        </div>
        <div class="padding right">
            <div class="back"></div>
        </div>
    </div>
    <div class="items-container">
        <ul class="items"></ul>
    </div>
    <div class="footer">
        <button class="buy-more btn btn-basic-primary">
            <h1><img src="{{moreCurrencyImage}}" class="currency">{{moreCurrencyText}}</h1>
        </button>
    </div>
</div>