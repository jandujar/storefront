<div class="row">
    {{#if equipped}}
    <img src="{{equippedIndicatorImage}}" class="equipped">
    {{else}}
    <img src="{{notEquippedIndicatorImage}}" class="not-equipped">
    {{/if}}
    <img src="{{imgFilePath}}" class="item-image">
    <div class="content">
        <h1>{{name}}</h1>
    </div>
    {{#unless balance}}
    <div class="price">
        <label>{{price}}</label>
        <img src="{{currency.imgFilePath}}">
    </div>
    {{/unless}}
</div>
<div class="row">
    <div class="description">{{description}}</div>
    <div class="buy-container">
        <a class="buy">
            <img src="{{buyImage}}">
        </a>
    </div>
</div>